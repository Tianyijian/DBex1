<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

	<context id="DB2Tables" targetRuntime="MyBatis3">

		<!-- 取消mybatis逆向工程生成类的commit -->
		<commentGenerator>
			<property name="suppressAllComments" value="true" />
		</commentGenerator>
		
		<!-- 配置数据库的连接信息  数据库连接配置的connectionURL不能直接使用&号，换成 &amp;  -->
		<jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
			connectionURL="jdbc:mysql://localhost:3306/e-commerce?useSSL=false&amp;serverTimezone=GMT%2B8" userId="tyj"
			password="tyj">
		</jdbcConnection>

		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>


		<!-- 指定javaBean生成的位置 -->
		<javaModelGenerator targetPackage="bean"
			targetProject=".\src\main\java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<!-- 指定sql映射文件生成的位置 -->
<!-- 		<sqlMapGenerator targetPackage="mapper" targetProject=".\src\main\resources">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator> -->

		<!-- 指定dao接口生成的位置，mapper接口 -->
<!-- 		<javaClientGenerator type="XMLMAPPER"
			targetPackage="dao" targetProject=".\src\main\java">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator> -->

		<!-- 指定每个表的生成策略 -->
		<table tableName="goods" domainObjectName="Goods"></table>
		<table tableName="shop" domainObjectName="Shop"></table>
		<table tableName="custom" domainObjectName="Custom"></table>
		<table tableName="order" domainObjectName="OrderForm"></table>
		<table tableName="pay" domainObjectName="Pay"></table>
		<table tableName="sell" domainObjectName="Sell"></table>
		<table tableName="order_detail" domainObjectName="OrderDetail"></table>
		<table tableName="shop_owner" domainObjectName="ShopOwner"></table>
		<table tableName="platform" domainObjectName="PlatForm"></table>
		<table tableName="p_p_cor" domainObjectName="PPCor"></table>

	</context>
</generatorConfiguration>